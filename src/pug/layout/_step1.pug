.row
    .col
        h2.fs-title Crear Nuevo Ticket de Atención
hr

.form-row
    .form-group.col-12
        .input-group
            .input-group-prepend
                label.input-group-text.form-control(for="step1SelectCallSource") Origen de llamado
            select#step1SelectCallSource.form-control.custom-select
                each val in ['Seleccionar origen','Llamado','Correo']
                    option= val

.row
    .col
        h2.fs-title Busqueda de cliente y sucursal
hr
.pt-3.form-row
    .form-group.col-6
        label(for="step1SelectClientType") Buscar por
        select#step1SelectClientType.form-control
            each val in ['Rut','Razón Social','Código Cliente']
                option= val
    .form-group.col-6
        label(for="step1InputSelectTipe") Cliente Número
        input.form-control#step1InputSelectTipe(type="text"  placeholder="Ej: 9.999.999-9")
        p.text-right.m-0
            a.btn.btn-outline-primary.btn-sm.mt-3#step1ShowResults(href="#") Buscar
.bk-step1-hidden.pb-5.row
    .col-12
        h2.fs-title Resultados
        hr
    .col-12.pt-3
        a#step1SelectClientName(href="#")
            .card
                .card-body
                    p 77.889.654-0
                    .card-title.pb-2
                        h5
                            | Nombre de cliente Spot - 
                            b [Cliente Manandte]
                    .card-text.container-fluid
                        .row
                            .col-4.p-0
                                i.fas.fa-phone.mr-2
                                span +569 6 5654.8454
                            .col-6.p-0
                                i.fas.fa-envelope.mr-2
                                span nombre@empresa.cl
                            .col-2.p-0
                                i.fas.fa-map-marker-alt.mr-2
                                span 30        
    include ../layout/_step2