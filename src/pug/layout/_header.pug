include ../utils/_mixins
block config
    -var pageTitle = ''
    -var pageDescription = ''
    -var baseDir = ''
    -var linkSrc = ''
doctype 
html(lang="es")
    head
        meta(charset="utf-8")
        title #{pageTitle}
        meta(content=""+pageTitle property="og:title")
        meta(name="description" content=""+pageDescription)
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(href=baseDir+"assets/img/favicon.png", rel="icon")
        link(
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous"
            )
        link(
            rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
            crossorigin="anonymous")
        link(href=baseDir+"assets/css/main.css", rel="stylesheet")
        link(href="images/favicon.png" rel="shortcut icon" type="image/x-icon")
        link(href="images/webclip.png" rel="apple-touch-icon")

    body(class="tecnioo-"+pageTitle.replace(/\s+/g, '-').toLowerCase())

        block header
            nav.tecnioo-navbar.navbar.navbar-light.bg-primary.px-2.align-items-center
                .tecnioo-navbar--wrap
                    img.tecnioo-navbar--wrap__img(src="./assets/img/Avatar-2", alt="Tecnioo")
                nav.navbar-nav-scroll
                    ul.navbar-nav.flex-row
                        li.nav-item
                            a.nav-link.text-white.px-2(href="./llamados") Llamados
                            ul.navbar-nav.flex-row
                        li.nav-item.dropdown
                            a.nav-link.text-white.px-2.dropdown-toggle(href="#", id="dropdownMenuButton", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Ruta Camioneta
                            .dropdown-menu(id="tcDropMenu", aria-labelledby="dropdownMenuButton")
                                a.dropdown-item(href="./programacion") Programación
                                a.dropdown-item(href="") Consulta de cierres
                        li.nav-item
                            a.nav-link.text-white.px-2(href="./llamados") Validaciones
                        
                nav.navbar-nav.ml-md-auto.flex-row.align-items-center.text-white
                    a.px-2.text-white(href="#") Agregar técnico <i class="fas fa-user-plus tc-icon"></i>
                    a.px-2.text-white(href="#") Preview <i class="fas fa-eye tc-icon"></i>

        block mainContent