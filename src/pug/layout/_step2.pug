

.col-12.mt-5
    h2.fs-title Seleccionar Sucursal
    hr
.col-12.my-2
    .input-group
        .input-group-prepend
            label.input-group-text.form-control(for="#step2SelectClientType") Seleccione la sucursal donde se encuentra la maquina
        select.custom-select.form-control#step2SelectClientType
            option Seleccionar
            - for (var x = 0; x < 30; x++)
                option= 'Sucursal '+ x  
.col-12.mt-4.bk-step2-hidden
    h2.fs-title Contacto asignado
    hr
    ul.mb-3.custom-control.custom-radio#step2checkboxContact
            li.my-2
                ul.tecnioo-card.d-flex.align-items-center
                    li.tecnioo-card--item.px-2.py-3.bg-grey.w-100.row.align-items-center
                            .col-12.tecnioo-card--title.pb-1
                                label(for="") Juan González
                                input(type="hidden" id="step2InputContactName" val="Juan González")
                            .col-6 
                                i.fas.fa-envelope.mr-2
                                label(for="") nombre@empresa.cl
                                input(type="hidden" id="step2InputContactEmail" val="nombre@empresa.cl")
                                span 
                            .col-6
                                i.fas.fa-phone.mr-2
                                label(for="step2InputContactPhone") +569 6 5654.8454
                                input(type="hidden" id="step2InputContactPhone" val="+569 6 5654.8454")

.col.mt-4
    h2.fs-title Información sobre el tipo de llamado
    .input-group
        .input-group-prepend
            label.input-group-text.form-control(for="step1SelectCallType") Tipo de llamado
        select#step1SelectCallType.form-control.custom-select
            each val in ['Seleccionar','Urgencias', 'Instalaciones *', 'Retiros **', 'Modificaciones', 'Perforaciones', 'Cambio de Accesorio', 'Puesta en Marcha', 'Capacitación', 'Diagnóstico', 'Visita Inspectiva', 'Taller' ]
                option= val
