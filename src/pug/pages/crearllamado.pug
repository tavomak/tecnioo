extends ../layout/_header

block append config
    -var pageTitle = 'Asistente de Llamados'
    -var pageDescription = ''
    -var baseDir = ''
    -var linkSrc = ''

block mainContent
    main.content-wrapper
        section.container-fluid.pt-5.pb-3.px-5
            .row
                .col-md-4.col-lg-6
                    h4 Asistente de creación de llamado
        section.container-fluid.px-5
            .row.mb-5.align-items-stretch
                .col-sm-4.col-md-2.bg-grey
                    article.p-2
                        ul#progressStep
                            li.active 
                                p 
                                    span 1
                                    | Búsqueda y selección
                            li 
                                p 
                                    span 2
                                    | Tipo de llamado
                            li 
                                p 
                                    span 3
                                    | Información del equipo
                            li 
                                p
                                    span 4
                                    | Diagnostico
                            li 
                                p
                                    span 5
                                    | Información del problema
                            li 
                                p
                                    span 6
                                    | Horario de atención
                            li 
                                p
                                    span 7
                                    | Previsualización de solicitud
                .col-sm-8.col-md-7
                    #msform
                        ul#progressbar.d-flex.justify-content-between
                            li.active.w-100
                            li.w-100
                            li.w-100
                            li.w-100
                            li.w-100
                            li.w-100
                            li.w-100
                        fieldset.w-100
                            .row
                                .col-6
                                    h2.fs-title Crear Nuevo Ticket de Atención
                                    h3.fs-subtitle Seleccionar Origen
                                .col-6.text-right
                                    select.form-control.d-inline.w-75
                                        each val in ['llamado','correo']
                                            option= val
                            hr
                            form.pt-5
                                .form-row.justify-content-between
                                    .form-group.col-4
                                        label(for="selectClientType") Buscar por
                                        select#selectClientType.form-control
                                            each val in ['Rut','Razón Social','Código Cliente']
                                                option= val
                                    .form-group.col-6
                                        label(for="inputClientType") Cliente Número
                                        input.form-control(type="text"  id="inputSelectTipe" placeholder="Ej: 9.999.999-9")
                                        p.text-right
                                            a(href="#")#showResults.btn.btn-outline-primary.btn-sm Buscar
                            hr
                            .bk-result-wrap.pb-5.pt-3.row
                                .col-8
                                    h2.fs-title Resultados
                                    a(href="#")
                                        .card
                                            .card-body
                                                p 77.889.654-0
                                                .card-title.pb-2
                                                    h5
                                                        | Nombre de cliente Spot - 
                                                        b [Clinte Manandte]
                                                .card-text.container-fluid
                                                    .row
                                                        .col-4.p-0
                                                            i.fas.fa-phone.mr-2
                                                            span +569 6 5654.8454
                                                        .col-6.p-0
                                                            i.fas.fa-envelope.mr-2
                                                            span nombre@empresa.cl
                                                        .col-2.p-0
                                                            i.fas.fa-map-marker-alt.mr-2
                                                            span 3
                                .col-4
                                    label(for="selectClientType") Seleccionar Sucursal
                                    select#selectClientType.form-control
                                        option Seleccionar
                                        - for (var x = 0; x < 30; x++)
                                            option= 'Sucursal '+ x          
                                
                            a.next.action-buton.btn.btn-primary.text-white Siguiente
                        fieldset.w-100
                            hr
                            h2.fs-title seleccione un contacto
                            hr
                            ul.mb-5
                                - for (var x = 0; x < 3; x++)
                                    li.my-2
                                        ul.tecnioo-card.d-flex.align-items-stretch.w-100
                                            li.tecnioo-card--item.px-3
                                                label.custom-checkbox
                                                    input(type="checkbox")
                                                    span.custom-checkbox--checkmark
                                            li.tecnioo-card--item.p-3.bg-grey.w-100
                                                ul.d-flex
                                                    li 
                                                        b COD #989659
                                                    li Cooler modelo NNN
                                                    li Marca Logo
                            a(href="#")#addContactNew.btn.btn-outline-primary.btn-sm Agregar Nuevo
                            .addContactWrap
                                .col-6
                                    h2.fs-title Agregar nuevo contacto
                                    h3.fs-subtitle Si no aparece en el listado
                                include ../layout/_contacto-form
                                a(href="#")#addContact.btn.btn-outline-primary.btn-sm Agregar
                            
                            h2.fs-title seleccione un local
                            hr
                            ul.mb-5
                                - for (var x = 0; x < 3; x++)
                                    li.my-2
                                        ul.tecnioo-card.d-flex.align-items-stretch.w-100
                                            li.tecnioo-card--item.px-3
                                                label.custom-checkbox
                                                    input(type="checkbox")
                                                    span.custom-checkbox--checkmark
                                            li.tecnioo-card--item.px-3.bg-grey.w-100
                                                p.pt-2 Nombre del local
                                                p.tecnioo-card--place.pb-2
                                                    i.fas.fa-map-marker-alt.tc-icon 
                                                    small.pl-2 Av Pedro de Valdivia 440 - Providencia, Santiago
                  
                            a.previous.action-buton.btn.btn-light.mr-4 Anterior
                            a.next.action-buton.btn.btn-primary.text-white Siguiente
                        fieldset.w-100
                            h2.fs-title Seleccione Origen 3
                            h3.fs-subtitle Crear Nuevo Ticket de Atención 3
                            a.previous.action-buton.btn.btn-light.mr-4 Anterior
                            a.next.action-buton.btn.btn-primary.text-white Siguiente

                .col-md-3.bg-grey.d-none.d-md-block
                    h4 Datos

    
