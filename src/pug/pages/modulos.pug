extends ../layout/_header

block append config
    -var pageTitle = 'Modulos'
    -var pageDescription = ''
    -var baseDir = ''
    -var linkSrc = ''
block links
    link( rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/css/ion.rangeSlider.min.css")
    link(href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet")
block mainContent
    main.content-wrapper
        section.container-fluid.pt-5.pb-3.px-5
            .row
                .col-6
                    h4 Titulo de página
        section.container
            .row
                .col-12.mt-5
                    h2.fs-title Campos de formulario
                    hr
                .col-12
                    .form-row
                        .form-group.col-6
                            label(for="#inputText") Input Text
                            input.form-control#inputText(type="text" name="inputText" placeholder="Input Text" required)
                        .form-group.col-6
                            label(for="#inputDatepicker") Input Datepicker
                            input.form-control#inputDatepicker(type="text" name="inputDatepicker" placeholder="Input Datepicker" required)
                        .form-group.col-6
                            label(for="inputRut") Input Rut
                            input.form-control.Rut#inputRut(type="text" name="inputRut" placeholder="RUT" required)
                        .form-group.col-6
                            label(for="inputNumber") Input Number
                            input.form-control#inputNumber(type="text" name="inputNumber" placeholder="Number" required)
                        .form-grouo.col-6
                            .custom-control.custom-radio.custom-control-inline
                                input(type="radio" id="radio" name="radio" class="custom-control-input")
                                label(class="custom-control-label" for="radio") Radio
                        .form-group.col-6
                            .custom-control.custom-checkbox
                                input.custom-control-input(type="checkbox" id="checkbox")
                                label(class="custom-control-label" for="checkbox") Checkbox
                        .form-group.col-12
                            label(for="textArea") Text Area
                            textarea.form-control#textArea(name="textArea", cols="30", rows="10")
            .row
                .col-12.mt-4
                    h2.fs-title Combos de Búsqueda
                    hr
                .col-12
                    .form-row
                        .form-group.col-6
                            .input-group
                                .input-group-prepend
                                    label.input-group-text.form-control(for="#selectWhitSearch") Seleccionar
                                select.custom-select.form-control.w-100#selectWhitSearch
                                    option Seleccionar
                                    - for (var x = 0; x < 30; x++)
                                        option= 'Selección '+ x

                        .form-group.col-6
                            .input-group
                                .input-group-prepend
                                    label.input-group-text.form-control(for="#step2SelectClientType") Seleccione sucursal
                                select.custom-select.form-control.w-100#step2SelectClientType
                                    option Seleccionar
                                    - for (var x = 0; x < 30; x++)
                                        option= 'Sucursal '+ x
                            p.text-right.m-0
                                a.btn.btn-outline-primary.btn-sm.mt-3#step1NuevaSucursal(href="#" data-toggle="modal" data-target="#modalNuevaSucursal") Nueva Sucursal
                .col-12.mt-4.bk-step2-hidden
                    h2.fs-title Contacto asignado
                    hr
                    ul.pl-0.mb-3.custom-control.custom-radio#step2checkboxContact
                            li.my-2
                                ul.tecnioo-card.d-flex.align-items-center
                                    li
                                        form.form-row.tecnioo-card--item.px-2.py-3.bg-grey.inputsFormulario
                                            .form-group.col-md-6
                                                label(for="NombreContacto") Nombre Contacto
                                                input.form-control(type="text" id="NombreContacto")  
                                            
                                            .form-group.col-md-6 
                                                label(for="step2InputEmail") Email
                                                input.form-control(type="email" id="step2InputEmail" required)
                                                
                                            .form-group.col-md-6
                                                label(for="step1SelectCallType") Teléfono
                                                input.form-control(type="number" id="step2InputTelefono"  pattern="[0-9]{9}" max="9" required)
                                            
                                            .form-group.col-md-6 
                                                label(for="step2InputComentario") Referencia de Unificación
                                                input.form-control.inputTelefono(type="text" id="step2InputComentario" required)
            .row
                .col
                    h2.fs-title Busqueda de cliente y sucursal
            hr
            .pt-3.form-row
                .form-group.col-6
                    label(for="step1SelectClientType") Buscar por
                    select#step1SelectClientType.form-control
                        each val in ['Rut','Razón Social','Código Cliente', 'ID de Cliente', 'Nombre de Fantasía']
                            option= val
                .form-group.col-6#step1Rut
                    label(for="step1InputSelectTipe") Cliente Número
                    input.form-control.Rut#step1InputSelectTipe(type="text" name="inputRut" placeholder="Ej: 9.999.999-9" required)
                .form-group.col-6.d-none#step1NotRut
                    label(for="step1InputSelectTipeNotRut") Cliente Número
                    input.form-control#step1InputSelectTipeNotRut(type="text"  placeholder="")
                p.text-right.w-100
                    a.btn.btn-outline-primary.btn-sm.mt-3#step1ShowResults(href="#") Buscar
            .bk-step1-hidden.pb-5.row
                .col-12
                    h2.fs-title Resultados
                    hr
                .col-12.pt-3
                    a#step1SelectClientName(href="#")
                        .card
                            .card-body
                                p 77.889.654-0
                                .card-title.pb-2
                                    h5
                                        | Nombre de cliente Spot - 
                                        b [Cliente Manandte]
                                .card-text.container-fluid
                                    .row
                                        .col-4.p-0
                                            i.fas.fa-phone.mr-2
                                            span +569 6 5654.8454
                                        .col-6.p-0
                                            i.fas.fa-envelope.mr-2
                                            span nombre@empresa.cl
                                        .col-2.p-0
                                            i.fas.fa-map-marker-alt.mr-2
                                            span 30
            .row
                .col
                    h2.fs-title Botones
            hr
            .row
                .col-12.my-2
                    button.btn.btn-primary Crear
                .col-12.my-2
                    button.btn.btn-danger Cerrar

        section.container.pt-5.pb-3.px-5
            .row.justify-content-center
                .col-sm-8
                    .card.text-center.p-5
                        .card-body
                            .card-title.mb-4 
                                h4 Aprobación
                                p Se <strong><span class="text-success">Aprobarán</span></strong> los cambios y se <strong><span  class="text-success">CERRARÁ OK<span></strong> el llamado número:

                            .form-group
                                input.w-100(type="text", placeholder="#123456789")
                            a.btn.btn-success.mt-4.d-block(href="#") Aprobar y Cerrar OK
                            a.mt-4.d-block(href="#") Cancelar
                            
        section.container.pt-5.pb-3.px-5
            .row.justify-content-center
                .col-sm-8
                    .card.text-center.p-5
                        .card-body
                            .card-title.mb-4 
                                h4 Rechazo
                                p Se <strong><span class="text-danger">Rechazarán</span></strong> los cambios y se <strong><span  class="text-success">CERRARÁ OK<span></strong> el llamado número:
                            form.px-5(action="")
                                .form-group
                                    input.w-100(type="text", placeholder="#123456789")
                                a.btn.btn-danger.mt-4.d-block(href="#") Rechazar y Cerrar OK
                                a.mt-4.d-block(href="#") Cancelar

        .modal.fade(id="modalNuevaSucursal" tabindex="-1" role="dialog" aria-labelledby="modalNuevaSucursalLabel" aria-hidden="true")
            .modal-dialog(role="document")
                .modal-content
                    .modal-header
                        h4 Nueva Sucursal Para
                    .modal-body
                        .card.p-2.mb-4
                            .card-body.p-0
                                p
                                    small 77.889.098-3
                                p
                                    b Nombre de cliente Spot
                        form
                            .form-group
                                label(for="inputNombreSucursalAdd") Nombre Sucursal
                                input.form-control(type="text"  id="inputNombreSucursalAdd")  
                            
                            .form-group
                                label(for="inputDireccionAdd") Dirección
                                input.form-control(type="text"  id="inputDireccionAdd")
                            
                            .form-group
                                label(for="inputNumeración") Numeración
                                input.form-control(type="text"  id="inputNumeraciónAdd")
                            
                            
                            .form-group
                                select.custom-select.form-control
                                    option Seleccionar
                                    - for (var x = 0; x < 30; x++)
                                        option= 'Comuna '+ x 
                            .form-group
                                .custom-control.custom-checkbox
                                    input.custom-control-input.step5SelectCheckbox(type="checkbox" id="checkboxFornuevaSucursalAdd")
                                    label(class="custom-control-label" for="checkboxFornuevaSucursalAdd") ¿En Casa Matríz?

                            .form-group
                                label(for="inputIDSucursal") ID de la Sucursal
                                input.form-control(type="text"  id="inputIDSucursalAdd")

                        p.text-center
                            a.btn.btn-primary(href="#") Crear Nueva Sucursal
                        p.text-center
                            a(href="#") Cancelar

