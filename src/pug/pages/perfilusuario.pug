extends ../layout/_header

block append config
    -var pageTitle = 'Perfil de usuario'
    -var pageDescription = ''
    -var baseDir = './'
    -var linkSrc = ''
block links
    link(href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css", rel="stylesheet")

block mainContent
    main.content-wrapper
        section.container.pt-5.pb-3
            .row
                .col-8.card
                    .container
                        .row.py-4
                            .col-sm-4
                                .card
                                    img.w-100(src="./assets/img/Avatar-2-p-500.png", alt="Tecnioo")
                                p.mt-3
                                    i.fas.fa-envelope
                                    |  <strong>Email:</strong> david.s@gmail.com
                                p
                                    i.fas.fa-user-circle
                                    |  <strong>Perfil:</strong> Técnico
                            .col-sm-8
                                .card-body
                                    .card-title.mb-4 
                                        h4 David Segura
                                        p Cargo
                                        p
                                            i.fas.fa-map-marker
                                            |  <strong>Zona TCM</strong> Santiago
                                    .card-text
                                        form#UserChangePassword
                                            .form-row
                                                .form-group.col-6
                                                    label(for="#inputText") Nueva contraseña
                                                    input.form-control.bk-password#inputClientePassword(type="pasword" name="inputClientePassword" placeholder="Ingrear nueva contraseña" required)
                                                .form-group.col-6
                                                    label(for="#inputDatepicker") Repite la contraseña
                                                    input.form-control.bk-password#inputClientePasswordEdit(type="pasword" name="inputClientePasswordEdit" placeholder="Repetir contraseña" required)
                            
                                            .form-row
                                                .form-group.col-6.text-center
                                                    a.btn.btn-success.mt-4.mr-4.sweet-error(href="#") Volver
                                                .form-group.col-6.text-center
                                                    a.btn.btn-primary.mt-4.disabled.sweet-ok#confirmEditPassword(href="#") Editar

